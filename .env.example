# EVE Sentinel Configuration
# Copy this file to .env and update values as needed

# =============================================================================
# Application Settings
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
# For production, set to your actual frontend domain(s)
CORS_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Session secret key for cookie encryption
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET_KEY=change-me-in-production-use-secrets-token-hex-32

# =============================================================================
# Database
# =============================================================================

# SQLite (default, for development)
DATABASE_URL=sqlite:///./sentinel.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/sentinel

# =============================================================================
# Discord Notifications
# =============================================================================

# Discord webhook URL for sending analysis alerts
DISCORD_WEBHOOK_URL=

# Discord role ID to mention for high-risk alerts (optional)
DISCORD_ALERT_ROLE_ID=

# =============================================================================
# Slack Notifications
# =============================================================================

# Slack webhook URL for sending analysis alerts
# Get one from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK_URL=

# Use @channel mention for high-risk alerts (default: true)
SLACK_MENTION_CHANNEL=true

# =============================================================================
# Webhook Behavior
# =============================================================================

# Webhook triggers
WEBHOOK_ON_RED=true
WEBHOOK_ON_YELLOW=false
WEBHOOK_ON_BATCH=true

# Retry configuration for webhook delivery
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1.0

# =============================================================================
# EVE ESI Configuration (for future authenticated endpoints)
# =============================================================================

# ESI application credentials (from https://developers.eveonline.com/)
ESI_CLIENT_ID=
ESI_SECRET_KEY=
ESI_CALLBACK_URL=http://localhost:8000/callback

# =============================================================================
# Hostile Entity Configuration
# =============================================================================

# Comma-separated corp IDs to flag as hostile
# Example: 667531913,98000001
HOSTILE_CORPS=

# Comma-separated alliance IDs to flag as hostile
# Example: 1354830081,99000001
HOSTILE_ALLIANCES=

# =============================================================================
# Auth Bridge (Alliance Auth or SeAT integration)
# =============================================================================

# Auth system type: "alliance_auth" or "seat"
AUTH_SYSTEM=

# Base URL for auth system (e.g., https://auth.youralliance.com)
AUTH_BRIDGE_URL=

# API token for auth system
AUTH_BRIDGE_TOKEN=

# =============================================================================
# API Authentication
# =============================================================================

# Require API key for all requests (default: false)
REQUIRE_API_KEY=false

# Comma-separated list of valid API keys
# Generate keys with: POST /api/v1/admin/generate-key (when auth disabled)
API_KEYS=

# =============================================================================
# Rate Limiting
# =============================================================================

# Enable rate limiting (default: true)
RATE_LIMIT_ENABLED=true

# Default rate limit for unspecified endpoints (default: 100/minute)
# Format: "number/period" where period is: second, minute, hour, day
RATE_LIMIT_DEFAULT=100/minute

# =============================================================================
# Redis Caching
# =============================================================================

# Enable Redis caching for ESI/zKill responses (default: false)
REDIS_ENABLED=false

# Redis connection URL
REDIS_URL=redis://localhost:6379

# Prefix for cache keys (useful for multi-tenant setups)
REDIS_PREFIX=sentinel:
