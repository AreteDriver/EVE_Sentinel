# EVE Sentinel Configuration
# Copy this file to .env and fill in your values

# ESI Configuration (required)
# Get credentials at: https://developers.eveonline.com/
ESI_CLIENT_ID=your_client_id_here
ESI_SECRET_KEY=your_secret_key_here
ESI_CALLBACK_URL=http://localhost:8000/callback

# Database Configuration
# SQLite (default):
DATABASE_URL=sqlite+aiosqlite:///./sentinel.db
# PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://user:pass@localhost/eve_sentinel

# Discord Webhooks (optional)
# Get webhook URL from: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=
DISCORD_ALERT_ROLE_ID=

# Webhook Triggers
WEBHOOK_ON_RED=true
WEBHOOK_ON_YELLOW=false
WEBHOOK_ON_BATCH=true

# Known Hostile Corps/Alliances (comma-separated EVE IDs)
# Example: Goonswarm Federation = 1354830081
HOSTILE_CORPS=
HOSTILE_ALLIANCES=

# Alliance Auth Bridge (optional)
AUTH_BRIDGE_URL=
AUTH_BRIDGE_TOKEN=
